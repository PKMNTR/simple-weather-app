<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context="com.example.pkmntr.greatweatherapp.views.UserDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="28dp"
        android:padding="8dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="@string/tv_main_text"
        android:id="@+id/tv_main_text"
        fontPath="fonts/LeagueSpartan.otf"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/iv_profile"
        android:layout_below="@+id/tv_main_text"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_photo_username"
        android:layout_below="@+id/iv_profile"
        android:textColor="@color/colorPrimary"
        android:textSize="21dp"
        android:padding="8dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="Username"
        fontPath="fonts/LeagueSpartan.otf"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_photo_portfolio_link"
        android:layout_below="@id/tv_photo_username"
        android:textColor="@color/colorPrimary"
        android:textSize="21dp"
        android:padding="8dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="www.test.com"
        fontPath="fonts/LeagueSpartan.otf"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_photo_name"
        android:layout_below="@id/tv_photo_portfolio_link"
        android:textColor="@color/colorPrimary"
        android:textSize="21dp"
        android:padding="8dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        fontPath="fonts/LeagueSpartan.otf"
        android:text="John Doe"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_photo_bio"
        android:layout_below="@id/tv_photo_name"
        android:textColor="@color/colorPrimary"
        android:textSize="21dp"
        android:padding="8dp"
        android:textAlignment="center"
        fontPath="fonts/LeagueSpartan.otf"
        android:layout_centerHorizontal="true"
        android:text="Lorem ipsum bla bla"/>/>


</RelativeLayout>
